
@using (Ajax.BeginForm("Create", "AspNetUsers", new AjaxOptions { HttpMethod = "Post", OnSuccess = "CreateSuccess" }, new { @class = "form-horizontal", @id = "createformid", role = "form" }))
{
    <div class="modal fade" id="modalCreate" role="dialog">
        <div class="modal-dialog  ">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm Tài Khoản</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("_createUser")
                </div>
                <div class="modal-footer">
                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-primary" @*onclick="Create"*@    value="Tạo" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function Create() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Create", "AspNetUsers")',
            data: $("#createformid").serialize(),
            success: function () {
                $("#modalCreate").modal("hide");
                alert("Tạo Thành Công");
            }
        })
    }
</script>
