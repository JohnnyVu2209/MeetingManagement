    <div class="col-sm-12">
        <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-12">
                <div class="form-inline pull-right">
                    <label>Search</label>
                    <input type="text" class="form-control" id="txtSearch" />
                    <button type="button" class="btn btn-success" data-toggle="modal" onclick="getCreateModal()">Create New</button>
                </div>
            </div>
        </div>
        <div id="grdUserView"></div>
        <div id="Popup"></div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $('#grdUserView').append('#myTable');
    });
    $(() => {
        getUser();
        $('#txtSearch').on('keyup', () => {
            getUser();
        })
    });
    function getUser() {
        $.ajax({
            url: '@Url.Action("SearchUser", "AspNetUsers")',
            datatype: 'html',
            method: 'GET',
            data: { searchText: $('#txtSearch').val() },
            success: function (res) {
                $('#grdUserView').html('').html(res);
            },
            error: function (err) {
                console.log(err);
            }
        })
    }
     function getCreateModal() {
        $.ajax({
            url: "Create",
            datatype: 'html',
            method: 'GET',
            data: {},
            success: function (data) {
                $("#Popup").html(data);

                $("#modalCreate").modal("show");
            },
            error: function (err) {
                console.log(err);
            }
        })
        }
    </script>
}
