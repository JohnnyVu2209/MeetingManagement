@using MeetingManagement.Models
@{
    ViewBag.Title = "Create";
    var Roles = ViewBag.Roles as SelectList;
    var User = ViewBag.Users as AspNetUser;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add <b>@User.Email</b> to role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Role:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleID", Roles, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a style="cursor:pointer" href="@Url.Action("Index","AspNetUsers")"></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

