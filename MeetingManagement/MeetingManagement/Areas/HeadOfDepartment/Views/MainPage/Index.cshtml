@model IEnumerable<MeetingManagement.Models.MEETING>
@{
    ViewBag.Title = "Index";
}   
    <body>

        <div class="row" style="margin-bottom:15px;">
            <div class="col-sm-12">
                <div class="form-inline pull-right">
                    <label>Search</label>
                    <input type="text" class="form-control" id="txtSearch" />
                    <button type="button" class="btn btn-success" data-toggle="modal" onclick="getCreateModal()">Create New</button>
                </div>
            </div>
        </div>
        <div class="table-zone">
            <div class="table-title">
                <p>Cuộc Họp Chờ Duyệt</p>
            </div>
            <div class="table-header">
                <ul>
                    <li class="col1">
                        Danh mục
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                    <li class="col2">
                        Cuộc họp
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                    <li class="col3">
                        Người chủ trì
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                    <li class="col4">
                        Ngày tạo
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                </ul>
            </div>
            <table>
                @foreach (var meeting in Model)
                {
                    if (meeting.Meeting_Confirmed == false)
                    {
                        <tr>
                            <td>@meeting.Category_id</td>
                            <td>@meeting.Meeting_name</td>
                            <td>@meeting.Create_by_name</td>
                            <td>@meeting.Date_Start</td>
                        </tr>
                    }
                }
            </table>
        </div> <!---Table 1-->

        <div class="table-zone">
            <div class="table-title">
                <p>Cuộc Họp Chưa Hoàn Thành</p>
            </div>
            <div class="table-header">
                <ul>
                    <li class="col1">
                        Danh mục
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
