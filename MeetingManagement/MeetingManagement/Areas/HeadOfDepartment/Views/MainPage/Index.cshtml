                    </li>
                    <li class="col2">
                        Cuộc họp
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                    <li class="col3">
                        Ngày đến hạn
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                    <li class="col4">
                        Tình trạng
                        <button class="filter">
                            @*<img src="~/Content/outline_filter_alt_black_24dp.png">*@
                        </button>
                    </li>
                </ul>
            </div>
            <table>
                @foreach (var meeting in Model)
                {
                    <tr>
                        <td>@meeting.Category_id</td>
                        <td>@meeting.Meeting_name</td>
                        <td>@meeting.Date_End</td>
                        <td>@meeting.Status</td>
                    </tr>
                }
            </table>
        </div> <!---Table 2-->
