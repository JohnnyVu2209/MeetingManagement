        var content = $("#content").val();
        var status = $("#status").val('2');

        $.ajax({
            url: '@Url.Action("VerifyMeeting","MainPage")',
            method: 'POST',
            data: (category_id, meeting_id, meeting_name, date_start, time_start, location, content, status),
            success: function (data) {
            },
            error: function (err) {
                console.log(err);
            }
        })
    }
