    @foreach (var item in Model)
    {
        <div class="item-list row" style="margin-left:15px;margin-top:15px;">
            <div class="col-md-8 item-name" onclick="location.href ='@Url.Action("Details","Categories", new { id = item.Category_id})';">
                <h5>@item.Category_Name</h5>
            </div>
            <div class="col-md-4 item-btn">
                <button class="btn btn-outline-secondary"
                        onclick="ShowEditPopUp(@item.Category_id)" style="border: 0.5px solid;align-self:center">
                    <ion-icon name="pencil-outline" style="width:30px;height:30px"></ion-icon>
                </button>
                <button class="btn btn-outline-danger"
                        onclick="ShowDeletePopUp(@item.Category_id)" style="border: 0.5px solid">
                    <ion-icon name="close-circle-outline"></ion-icon>
                </button>
            </div>

        </div>
    }
