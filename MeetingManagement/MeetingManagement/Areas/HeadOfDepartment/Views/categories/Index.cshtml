@model IEnumerable<MeetingManagement.Models.CATEGORY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";
}


<!---CSS-->
<style>
    .modal-open .yuki-login-info {
        margin-right: 16.8px;
    }

    .modal-open #yuki-nav-bar img {
        left: calc((100% - 58px)/2 - 16.8px/2);
    }

    .modal-open #option {
        right: calc(160px + 16.8px);
    }

    .yuki-btn-blue {
        background-color: #009FE5 !important;
    }

    .yuki-btn-sea {
        background-color: #00E5B8 !important;
    }

    .user-ctg-index-table div:hover {
        background-color: #66c2ff;
    }

    .user-ctg-index-table div p {
        font-weight: bold;
        font-size: 16px;
    }


    .user-ctg-index-button {
        float: right;
        width: 60px;
        height: 30px;
        background-color: #009FE5;
        color: white;
        border-radius: 5px;
        margin-top: -30px;
        border: 0px;
    }

    .card-body-fixed {
        position: relative;
        top: 50px;
        width: 100%;
        height: 800px;
        z-index: 1;
    }

    .lable-zone1 {
        color: black;
        line-height: 40px;
    }

    .item-list {
        background: #f2f2f2;
        border-radius: 5px;
        height: 45px;
        cursor: pointer;
        /* display: flex; */
        align-items: center;
        padding: 0 15px;
        margin: auto;
        width: 90%;
    }

        .item-list:hover {
            background-color: #e7e7e7;
        }

    .item-name {
        height: inherit;
        display: flex;
        align-items: center;
    }

        .item-name h5 {
            font-size: initial;
        }

    .item-btn {
        display: flex;
        justify-content: flex-end;
    }

        .item-btn button {
            font-size: medium;
        }

            .item-btn button i {
                margin-right: 10px;
            }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href="~/Content/catalog-list.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<!--Content--->

<div id="container">
    <div class="user-ctg-index-header" style="display:flex;">
        <h2 style="position:relative;">Danh mục</h2>
        <button style="color:white;position:relative;left:1000px;" onclick="ShowCreatePopUp()" class="btn yuki-btn-blue">
            <p style="margin:0;font-size:medium">
                Tạo
            </p>
        </button>
        <button style="color: white;position: relative; left: 700px;font-size: medium"
                onclick="location.href = '@Url.Action("statistic","Categories")';" class="btn yuki-btn-sea">
            Thống kê
        </button>
    </div>
    @foreach (var item in Model)
    {
        <div class="item-list row" style="margin-left:15px;margin-top:15px;">
            <div class="col-md-8 item-name" onclick="location.href = '@Url.Action("Details","Categories", new { id = item.Category_id})';">
                <h5>@item.Category_Name</h5>
            </div>
            <div class="col-md-4 item-btn">
                <button class="btn btn-outline-secondary" onclick="ShowEditPopUp(@item.Category_id)" style="border: 3px solid #6c757d;">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Sửa
                </button>
                <button class="btn btn-outline-danger" onclick="ShowDeletePopUp(@item.Category_id)" style="border: 3px solid #dc3545; ">
                    <i class="fa fa-trash" aria-hidden="true"></i>Xóa
                </button>
            </div>

        </div>
    }

    <div id="show-popup"></div>
</div>





<!--JS--->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script type="text/javascript">
    function ShowCreatePopUp() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Create", "Categories")',
            data: {},
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myCreateModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
    function ShowEditPopUp(categoryID) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Edit", "Categories")',
            data: { categoryID },
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myEditModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
    function ShowDeletePopUp(categoryID) {
        $("#loader-div")
        $.ajax({
            type: "GET",
            url: '@Url.Action("Delete", "Categories")',
            data: { id: categoryID },
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myDeleteModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };

</script>