@model IEnumerable<MeetingManagement.Models.CATEGORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/catalog-list.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div id="container">
    <div class="user-ctg-index-header" style="display:flex;">
        <h2 style="position:relative;">Danh mục</h2>
        <button style="color:white;position:relative;left:1000px;" onclick="ShowCreatePopUp()" class="btn yuki-btn-blue">
            <p style="margin:0;">
                Tạo
            </p>
        </button>
    </div>
    <div id="time-table" class="user-ctg-index-table-zone">
        <div class="table user-ctg-index-table">
            @foreach (var item in Model)
            {
                <div style="display:flex;">
                    <h5 onclick="location.href = '@Url.Action("Details","Categories", new { id = item.Category_id})';">
                        @item.Category_Name
                    </h5>
                    <span id="option">
                        <i class="fa fa-ellipsis-h">
                            <ul class="sublist">
                                <li>
                                    <button onclick="ShowEditPopUp(@item.Category_id)" class="edit-btn" data-modal="modal1">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                        Sửa
                                    </button>
                                </li>
                                <li>
                                    <button onclick="ShowDeletePopUp(@item.Category_id)" class="delete-btn" data-modal="modald1">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                        Xóa
                                    </button>
                                </li>
                            </ul>
                        </i>
                    </span>
                </div>

            }
        </div>
    </div>
</div>
<div id="show-popup"></div>
<style>
    .yuki-btn-blue {
        background-color: #009FE5 !important;
    }
    .user-ctg-index-table div:hover {
        background-color: #66c2ff;
    }

    .user-ctg-index-table div p {
        font-weight: bold;
