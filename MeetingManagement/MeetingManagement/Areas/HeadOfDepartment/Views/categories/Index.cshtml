            @foreach (var item in Model)
            {
                <div style="display:flex;">
                    <h5 onclick="location.href = '@Url.Action("Details","Categories", new { id = item.Category_id})';">
                        @item.Category_Name
                    </h5>
                    <span id="option">
                        <i class="fa fa-ellipsis-h">
                            <ul class="sublist">
                                <li>
                                    <button onclick="ShowEditPopUp(@item.Category_id)" class="edit-btn" data-modal="modal1">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                        Sửa
                                    </button>
                                </li>
                                <li>
                                    <button onclick="ShowDeletePopUp(@item.Category_id)" class="delete-btn" data-modal="modald1">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                            Xóa
                                        </button>
                                </li>
                                <li>
                                    <button onclick="ShowStatisticPopUp()" class="delete-btn" data-modal="modald1">
                                        <ion-icon name="bar-chart-outline" style="width:50px;height:20px"></ion-icon>
                                    </button>
                                </li>
                            </ul>
                        </i>
                    </span>
                </div>
            }
        </div>
    </div>
</div>

