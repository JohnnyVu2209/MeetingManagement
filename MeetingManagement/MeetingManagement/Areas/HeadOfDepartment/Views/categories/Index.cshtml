@model IEnumerable<MeetingManagement.Models.CATEGORY>
@{
    ViewBag.Title = "Index";
}

@*scroll show up, position not change*@
<style>
    .item-list {
        background: #f2f2f2;
        border-radius: 5px;
        height: 45px;
        cursor: pointer;
        /* display: flex; */
        align-items: center;
        padding: 0 15px;
        margin: auto;
    }
    .create-meeting-btn {
        float: right;
        width: 90px;
        height: 45px;
        background-color: #009FE5;
        color: white;
        border-radius: 5px;
        font-size: 16px
    }

        .item-list:hover {
            background-color: #e7e7e7;
        }

    .item-name {
        height: inherit;
        display: flex;
        align-items: center;
    }

        .item-name h5 {
            font-size: initial;
        }

    .item-btn {
        display: flex;
        justify-content: space-evenly;
    }

        .item-btn button {
            font-size: medium;
        }

            .item-btn button i {
                margin-right: 10px;
            }
    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }
        .btn-outline-secondary:hover {
            color: #fff;
            background-color: #6c757d;
            border-color: #6c757d;
        }
    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }
        .btn-outline-danger:hover {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }
</style>

<link href="~/Content/catalog-list.css" rel="stylesheet" />
<link href="~/Content/Meetings/meetingdetail.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<!--Content--->
<div class="body-navbar">

    <div class="nav-content-zone">

        <div class="lable-zone1">
            <div style="text-transform: uppercase;font-size:30px;margin-bottom:20px" ; class="header">
                <label>DANH MỤC</label>

                <button class="create-meeting-btn" onclick="ShowCreatePopUp()">Tạo</button>
            </div>

        </div>
    </div>
</div>
<div class="card-body card-body-fixed">
    @foreach (var item in Model)
    {
        <div class="item-list row" style="margin-left:15px;margin-top:15px;">
            <div class="col-md-8 item-name" onclick="location.href ='@Url.Action("Details","Categories", new { id = item.Category_id})';">
                <h5>@item.Category_Name</h5>
            </div>
            <div class="col-md-4 item-btn">
                <button class="btn btn-outline-secondary" onclick="ShowEditPopUp(@item.Category_id)" style="border: 3px solid #6c757d;">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Sửa
                </button>
                <button class="btn btn-outline-danger" onclick="ShowDeletePopUp(@item.Category_id)" style="border: 3px solid #dc3545; ">
                    <i class="fa fa-trash" aria-hidden="true"></i>Xóa
                </button>
            </div>

        </div>
    }
</div>
<div id="show-popup"></div>
<style>
    .yuki-btn-blue {
        background-color: #009FE5 !important;
    }

    .user-ctg-index-table div:hover {
        background-color: #66c2ff;
    }

    .user-ctg-index-table div p {
        font-weight: bold;
        font-size: 16px;
    }
    /*.user-ctg-index-table tbody tr:hover td {
                background-color: #f1f1f1;
            }*/
    .user-ctg-index-button {
        float: right;
        width: 60px;
        height: 30px;
        background-color: #009FE5;
        color: white;
        border-radius: 5px;
        margin-top: -30px;
        border: 0px;
    }

    .user-ctg-index-header {
        width: 1000px;
        margin: 20px 0px;
    }

        .user-ctg-index-header h1, h2, h3, h4, h5, h6 {
            margin: 0px;
        }

    .user-ctg-index-manipulation {
        float: right;
        margin: 0px 2.5px;
        color: black;
    }
</style>




<script type="text/javascript">
    function ShowCreatePopUp() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Create", "Categories")',
            data: {},
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myCreateModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
    function ShowEditPopUp(categoryID) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Edit", "Categories")',
            data: { categoryID },
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myEditModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
    function ShowDeletePopUp(categoryID) {
        $("#loader-div")
        $.ajax({
            type: "GET",
            url: '@Url.Action("Delete", "Categories")',
            data: { id: categoryID },
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myDeleteModal").appendTo("body").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
</script>