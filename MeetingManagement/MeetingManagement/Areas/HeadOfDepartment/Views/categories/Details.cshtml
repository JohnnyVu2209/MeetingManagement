<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<img style="width:100px;height:100px" src="https://media1.tenor.com/images/239a102840e57a65543cf5c7b3accd5f/tenor.gif">
<div id="container">
    <div style="text-transform: uppercase;font-size:20px;margin-bottom:20px" ; class="header">
        @Html.Label(Model.Category_Name)
        <button style="float: right; width: 90px;height: 45px;
        background-color: #009FE5; color: white;
        border-radius: 5px;font-size:16px"
                onclick="location.href = '@Url.Action("MeetingForm","MEETINGs", new { id = Model.Category_id})';">
