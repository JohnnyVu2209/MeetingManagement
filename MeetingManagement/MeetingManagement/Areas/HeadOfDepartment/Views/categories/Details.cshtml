@model MeetingManagement.Models.CATEGORY
@using MeetingManagement.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";
    SEP24Team7Entities db = new SEP24Team7Entities();
    var task = db.TASKs;
    var meet = db.MEETINGs;
}


<style>
    .body-content {
        width: calc(100% - 150px) !important;
        max-width: none !important;
    }

    .btn-hard-code-vl {
        float: right;
        width: 90px;
        height: 45px;
        background-color: #009FE5;
        color: white;
        border-radius: 5px;
        font-size: 16px;
        position: absolute;
        top: 0px;
        right: 0px;
    }
</style>
<link href="~/Content/Meetings/meetingdetail.css" rel="stylesheet" />

<!--Content-->
<div>
    <div style="text-transform: uppercase;font-size:20px;margin-bottom:20px;position:relative" class="header">
        <div style="width:70%">
            @Html.Label(Model.Category_Name)
        </div>
        <div style="font-size:12px; width:70%">
            @Html.DisplayFor(m => m.AspNetUser.UserName)
        </div>
        <button class="btn-hard-code-vl" onclick="location.href = '@Url.Action("MeetingForm","MEETINGs", new {id = Model.Category_id })';">
            Tạo
        </button>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                Modal content
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Danh sách công việc trong danh mục @Html.Label(Model.Category_Name)</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Action("MeetingList", "MEETINGs", new { id = Model.Category_id })
</div>
