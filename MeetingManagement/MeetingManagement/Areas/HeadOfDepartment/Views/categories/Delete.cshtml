@model MeetingManagement.Models.CATEGORY

<div id="myDeleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width:460px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Xóa danh mục</h4>
            </div>
            <div class="modal-body">
                <form action="Delete">
                    @Html.HiddenFor(m => m.Category_id)
                    Bạn thật sự muốn xóa "@Html.DisplayFor(m => m.Category_Name)" ?
                </form>

            </div>
            <div class="modal-footer">
                <button class="btn btn--delete">Xóa</button>
                <button class="btn btn-normal " data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
