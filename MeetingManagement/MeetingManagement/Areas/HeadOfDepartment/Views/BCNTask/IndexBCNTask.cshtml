
@{
    ViewBag.Title = "IndexBCNTask";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/quyhung/css/accodion-css.css" rel="stylesheet" />
<div class="accordion">
    @foreach (var x in Model)
    {
        <div class="boxItem">
            <button class="contentBox">
                <strong>@x.MeetingName</strong><i class="fas fa-angle-down"></i>
            </button>

            <div class="content">

                <table>
                    <tbody>
                        <tr>
                            <td>@x.TaskName</td>
                            <td>@x.FullName</td>
                            <td>@x.DueDate</td>
                            <td>
                                @if (@x.Status == true)
                                {
                                    <div class="complete-status" style="width:90px">Hoàn thành</div>
                                }
                                else
                                {
                                    <div class="incomplete-status" style="width:130px">Chưa hoàn thành</div>
                                }
                            </td>
                            <td><a href="#"><img src="https://img.icons8.com/material-rounded/24/4a90e2/bell--v1.png" style="30px;height:30px" /></a></td>
                        </tr>
                    </tbody>
                </table>
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
                         aria-valuemin="0" aria-valuemax="100" style="width:40%">
                        40% Complete (success)
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script src="~/Content/quyhung/js/accodion-scripts.js"></script>