@model IEnumerable<MeetingManagement.Models.MEETING>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/catalog-list.css" rel="stylesheet" />

<br />

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#joinedMeetings">Cuộc họp tham dự</a></li>
    <li><a data-toggle="tab" href="#myMeetings">Cuộc họp của tôi</a></li>
    <li><a data-toggle="tab" href="#pendingMeetings">Cuộc họp chờ duyệt</a></li>
</ul>

<div class="tab-content">
    <div id="joinedMeetings" class="tab-pane fade in active">
        <br />
        <div id="joinedMeetingGrd">
            <ul class="catalogList">
                @foreach (var item in ViewBag.pendingMeeting)
                {
                    <li onclick="location.href = '@Url.Action("MeetingDetail","Meetings", new { id = item.Meeting_id })';">
                        @item.Meeting_name
                    </li>
                }
            </ul>
        </div>
    </div>

    <div id="myMeetings" class="tab-pane fade">
        <br />
        <div id="myMeetingGrd">
            <ul class="catalogList">
                @foreach (var item in ViewBag.attendMeeting)
                {
                    <li onclick="location.href = '@Url.Action("MeetingDetail","MEETINGs", new { id = item.Meeting_id })';">
                        @item.Meeting_name
                    </li>
                }
            </ul>
        </div>
    </div>

    <div id="pendingMeetings" class="tab-pane fade">
        <br />
        <div id="pendingGrd">
            <ul class="catalogList">
                @foreach (var item in ViewBag.myMeeting)
                {
                    <li onclick="location.href = '@Url.Action("MeetingDetail","MEETINGs", new { id = item.Meeting_id })';">
                        @item.Meeting_name
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#nav-joined-tab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
    $('#nav-my-tab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
</script>






