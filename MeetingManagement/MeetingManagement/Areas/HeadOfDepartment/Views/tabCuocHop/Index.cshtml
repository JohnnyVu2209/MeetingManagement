@model IEnumerable<MeetingManagement.Models.MEETING>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HeadOfDepartment/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/catalog-list.css" rel="stylesheet" />
<link href="~/Content/quyhung/css/tabcuochop.css" rel="stylesheet" />

<br />
<div class="tab">
    <button class="tablinks" onclick="openTab(event, 'mycate')">Cuộc họp chờ duyệt</button>
    <button class="tablinks" onclick="openTab(event, 'mymeeting')">Cuộc họp tham dự</button>
    <button class="tablinks" onclick="openTab(event, 'mywork')">Cuộc họp của tôi</button>
</div>


<div id="mycate" class="tabcontent">
    <ul class="catalogList" >
        @foreach (var item in ViewBag.pendingMeeting)
        {
            <li onclick="location.href = '@Url.Action("MeetingDetail","Meetings", new { id = item.Meeting_id })';">
                @item.Meeting_name
            </li>
        }
    </ul>
</div>

<div id="mymeeting" class="tabcontent active">
    <ul class="catalogList">
        @foreach (var item in ViewBag.attendMeeting)
        {
        <li onclick="location.href = '@Url.Action("MeetingDetail","Meetings", new { id = item.Meeting_id })';">
            @item.Meeting_name
        </li>
        }
    </ul>
</div>


<div id="mywork" class="tabcontent">
    <ul class="catalogList">
        @foreach (var item in ViewBag.myMeeting)
        {
            <li onclick="location.href = '@Url.Action("MeetingDetail","Meetings", new { id = item.Meeting_id })';">
                @item.Meeting_name
            </li>
        }
    </ul>
</div>



<script>
    function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>


