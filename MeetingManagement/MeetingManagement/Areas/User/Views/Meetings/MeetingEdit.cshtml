            url: '@Url.Action("DeleteAttachment", "Meetings")',
            data: { id },
            dataType: "html",
            success: function (data) {
                $("#show-popup").html(data);
                $("#myDeleteModal").modal("show");
            },
            error: function (data) {
                return false;
            }
        });
    };
