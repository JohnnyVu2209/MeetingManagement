            </td>

            <td>
                @if (status0 == "Chưa họp")
                {
                    <div class="waiting-status">@status0</div>
                }
                else if (status0 == "Chờ duyệt")
                {
                    <div class="pending-status">@status0</div>
                }
                else if (status0 == "Thiếu biên bản")
                {
                    <div class="missing-status">@status0</div>
                }
                else if (status0 == "Chưa hoàn thành")
                {
                    <div class="incomplete-status">@status0</div>
                }
