@model MeetingManagement.Models.OTHER_ACCOUNT

@{
    ViewBag.Title = "CreateUser2";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="modalCreate2" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><center>Khách Mời</center></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form class="form-horizontal" action="">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="Username">Tên Khách Mời:</label>
                        <div class="col-sm-13">
                            <input type="Username" class="form-control" id="usernam" placeholder="Nhập">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="Role">Vai Trò:</label>
                        <div class="col-sm-13">
                            <input type="Role" class="form-control" id="Role" placeholder="Nhập">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="email">Email:</label>
                        <div class="col-sm-13">
                            <input type="email" class="form-control" id="email" placeholder="Nhập">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="pwd">Password:</label>
                        <div class="col-sm-13">
                            <input type="password" class="form-control" id="pwd" placeholder="Nhập">
                        </div>
                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success btn-block" data-dismiss="modal">Tạo</button>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">

            </div>

        </div>
    </div>
</div>
