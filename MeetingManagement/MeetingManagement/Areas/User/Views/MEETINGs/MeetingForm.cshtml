@model MeetingManagement.Models.MEETING
@using MeetingManagement.Models;
@{
    var userArr = new List<string>();
    ViewBag.Title = "MeetingForm";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}



